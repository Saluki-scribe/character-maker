            {{!-- <p>Species: {{species}}</p> --}}
            {{!-- <p>Description: {{description}}</p> --}}
        </div>
    </div>

<!--Start Right-hand Column-->

    <div class="col-5" id="right-col">

        <ul>
            {{#each savedCharacters}}
                    <li>
                        <p>ID: {{this.id}}</p>
                        <p>Character: {{this.name}} <a class="delete" href="/delete/{{this.id}}">Delete Me!</a></p>
                        <form action="/update/{{this.id}}" method="POST">
                            <textarea type="text" name="name">{{this.name}}</textarea>
                            <button type="submit">UPDATE</button>
                        </form>
                    </li>
                
                
            {{/each}}
        </ul>
    </div>
    
</div> <!--End Row-->

