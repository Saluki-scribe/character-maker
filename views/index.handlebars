<div class="row">

    <div class="col-12">
        <h2>Make a New Character!</h2>
        <form action="/response" method="POST" id="char-form">
            <h4>Name</h4>
            <input type="text" name = "name" id = "char-name" class="form-control" required>
            <!--<h3>Age</h3>
            <input type = "text" name = "age" id = "char-age" class = "form-control" required>
            <h3>Species</h3>
            <input type = "text" name = "species" id = "char-species" class = "form-control" required>-->
            <h4>Description</h4>
            <textarea id = "char-description" name = "description" form = "char-form" "char" class= "form-control"></textarea> 
            <input type="submit" value="Submit">
        </form>
    </div>
    
</div> <!--End Character Creation Row-->