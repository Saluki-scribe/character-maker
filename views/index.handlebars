<!--===============================================================
~~~~~~~~~~~~~~~~~~~~~~CHARACTER STATUS ROW~~~~~~~~~~~~~~~~~~~~~~~~
=================================================================-->

<!--Start Left-hand Column-->

<div class="row">

    <div class = "col-5" id="left-col">
        <div id = "new-chars">
            <h4>Inactive Characters</h4>
            <ul>
            {{#each characters}}
                <div id="char-{{this.id}}">

                    <li>
                    <p>ID: {{this.id}}</p>
                    <p>Character: {{this.name}}</p>
                        <form action="/save/{{this.id}}" method="POST">
                            <input type="text" name="name" value="{{this.name}}"></input>
                            <button class= "save-char" type="submit">Make Active</button>
                        </form>
                        <a class="delete" href="/delete/{{this.id}}"><button>Delete {{this.name}}</button></a>
                    </li>
                </div>
            {{/each}}
            </ul>
        </div>
    </div>

<!--Start Right-hand Column-->

    <div class="col-5" id="right-col">
        <h4>Active Characters</h4>
        <ul>
            {{#each savedCharacters}}
                    <li>
                        <p>ID: {{this.id}}</p>
                        <p>Character: {{this.name}}</p>
                        <form action="/update/{{this.id}}" method="POST">
                            <input type="text" name="name" value="{{this.name}}"></input>
                            <button type="submit">Make Inactive</button>
                        </form>
                        <a href="/update/{{this.id}}"><button>Edit</button></a>
                        <a class="delete" href="/delete/{{this.id}}"><button>Delete {{this.name}}</button></a>
                    </li>
            {{/each}}
        </ul>
    </div>
    
</div> <!--End Row-->


