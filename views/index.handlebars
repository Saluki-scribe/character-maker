<!--Start Left-hand Column-->

<div class="row">
    <div class = "col-5" id="left-col">
        <div id = "new-chars">

            
            <ul>
            {{#each characters}}
                <div id="char-{{this.id}}">

                    <li>
                    <p>ID: {{this.id}}</p>
                    <p>Character: {{this.name}} <a class="delete" href="/delete/{{this.id}}">Delete Me!</a></p>
                        <form action="/save/{{this.id}}" method="POST">
                            <textarea type="text" name="name">{{this.name}}</textarea>

                            <button class= "save-char" type="submit">SAVE</button>
                        </form>
                    </li>
                </div>
            {{/each}}
            </ul>
            

            <!--<p>Name: {{name}}</p>-->
